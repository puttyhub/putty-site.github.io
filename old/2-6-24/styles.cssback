body {
    font-family: 'Helvetica Neue', sans-serif;
    margin: 0;
    padding: 0;
    color: #333;
    background: #fff;
    font-size: 100%;
}

/* Header and Top Container */

.navbar {
    display: flex;
    justify-content: start;
    align-items: center;
    background-color: #fff;
    padding: 10px 10%;
    position: fixed;
}

.navbar nav {
    display: flex;
    gap: 40px;
}

.navbar a {
    text-decoration: none;
    color: #333;
    font-weight: bold;
    font-size: 150%;
}

.container {
    margin: auto;
    padding: 15px;
    max-width: 1250px;
}

.row {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
}

#top-pic, #top-desc {
    padding: 5px;
    grid-column: span 6;
}

#top-pic img {
    text-align: left;
    border-radius: 50%;
    width: 240px;
    height: 240px;
}

.image-container {
    width: 100%;
    overflow: hidden;
}

.image-container img {
    width: auto;
    height: 100%;
}

.hero {
    display: grid;
    grid-template-columns: auto auto;
    gap: 20px;
    padding: 50px 10%;
}

.hero a {
    text-decoration: none;
    color: #333;
}

.hero h1 {
    color: #000000;
    font-style: bold;
    margin: auto;
}

.hero h2 {
    color: #000000;
    margin: auto;
}

.hero p { 
    font-size: 20px;
    line-height: 1.6;
}

.hero img {
    max-width: 100%;
    height: auto;
}

@media (max-width: 1000px) {
    .navbar nav {
        gap: 15px;
    }  

    .navbar a {
        font-size: 125%;
    }

    .hero { 
        grid-template-columns: 1fr;
    }
    
    .hero img {
        width: 100%;
    }
}